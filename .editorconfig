root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.golden]
insert_final_newline = false

[{Makefile, go.mod, go.sum, *.go, .gitmodules}]
indent_style = tab
indent_size = 4

[*.proto]
indent_size = 4

[Makefile]
indent_size = 4

[*.md]
indent_size = 4
trim_trailing_whitespace = false
indent_style = unset

[Dockerfile]
indent_size = 4
